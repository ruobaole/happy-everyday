{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    // ts-node https://github.com/microsoft/TypeScript/issues/9858
    // "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  // "include": ["src/**/*.ts"],
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
